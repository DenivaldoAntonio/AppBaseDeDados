<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.bd.sgv.view.DiretorList"
            prefHeight="600.0" prefWidth="800.0">
    
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gerir Diretores" />
            
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <TextField fx:id="txtprocurar" promptText="procurar por nome..." HBox.hgrow="ALWAYS" />
                <CheckBox fx:id="chkMostrarOcultos" text="Mostrar Ocultos" />
                <Button fx:id="btnAtualizar" text="ðŸ”„ Atualizar" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <TableView fx:id="tableDiretores" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
                <TableColumn fx:id="colNome" prefWidth="500.0" text="Nome" />
                <TableColumn fx:id="colHidden" prefWidth="100.0" text="Oculto" />
            </columns>
        </TableView>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
            <Button fx:id="btnNovo" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" 
                    text="âž• Novo Diretor" />
            <Button fx:id="btnEditar" style="-fx-background-color: #2196F3; -fx-text-fill: white;" 
                    text="Editar" />
            <Button fx:id="btnApagar" style="-fx-background-color: #f44336; -fx-text-fill: white;"
                    text="Apagar (Soft)" />
        </HBox>
    </bottom>
</BorderPane>
