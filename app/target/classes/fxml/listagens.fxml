                        <Label style="-fx-font-weight: bold;" text="VIEW: VW_PAISES_EUROPA_18_MAIS" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnCarregarPaisesEuropa18Mais" text=" Carregar Dados" />
                    </HBox>
                    <TableView fx:id="tablePaisesEuropa18Mais" VBox.vgrow="ALWAYS" />
                </VBox>
            </Tab>

            <!-- Tab 9: Top 10 Diretores Rating -->
            <Tab text="Top 10 Diretores">
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label style="-fx-font-weight: bold;" text="VIEW: VW_TOP_10_DIRETORES_RATING" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnCarregarTop10DiretoresRating" text=" Carregar Dados" />
                    </HBox>
                    <TableView fx:id="tableTop10DiretoresRating" VBox.vgrow="ALWAYS" />
                </VBox>
            </Tab>

        </TabPane>
    </center>
</BorderPane>
