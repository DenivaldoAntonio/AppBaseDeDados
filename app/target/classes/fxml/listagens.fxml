                    </HBox>
                    <TableView fx:id="tableFilmes18Mais" VBox.vgrow="ALWAYS" />
                </VBox>
            </Tab>

            <!-- Tab 7: Continentes Filmes -10 -->
            <Tab text="Continentes -10">
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label style="-fx-font-weight: bold;" text="VIEW: VW_CONTINENTES_FILMES_MENOS_10" />
                        <Region HBox.hgrow="ALWAYS" />
