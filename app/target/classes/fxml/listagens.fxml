                    </HBox>
                    <TableView fx:id="tableContinentesFilmesMenos10" VBox.vgrow="ALWAYS" />
                </VBox>
            </Tab>

            <!-- Tab 8: Países Europa 18+ -->
            <Tab text="Europa 18+">
                <VBox spacing="10.0">
                    <padding>
